{% extends 'base.html.twig' %}

{% block title %}
    Galería - Importar desde Archivo
{% endblock %}

{% block body %}

    <div class="container container-fluid pt-1 mt-3">
        <div class="alert alert-primary d-flex align-items-center justify-content-center mt-sm-5 mb-sm-3" role="alert">
            <div class="row row-cols-1 justify-content-center">
                <div class="col text-center">
                    <div class="h1">
                        Importar Imagenes desde Archivo
                    </div>
                </div>
                    <div class="col d-flex justify-content-center">
                        <a class="btn btn-sm btn-success me-2" href="{{ path('app_imagen_index') }}">
                            Volver a la Galería
                        </a>
                    </div>

            </div>
        </div>
        {{ form_start(form, {
                attr: {
                    'class': 'form-control p-5'
                }
            })
        }}
        <div class="mb-3">
            {{ form_row(form.archive, {
                attr: {
                    'class': 'form-control'
                }
            })
            }}
            <div class="form-text">
                Este campo es obligatorio, por favor completar.
            </div>
        </div>
        <button class="btn btn-lg btn-primary" type="submit">
            Importar Archivo
        </button>
        {{ form_end(form) }}
    </div>

{% endblock %}