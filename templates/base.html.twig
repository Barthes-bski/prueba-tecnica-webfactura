<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                Prueba Técnica - WebFactura
            {% endblock %}
        </title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
            <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
                <div class="container">
                    <a class="navbar-brand" href="#">MSL</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/">Inicio</a>
                            </li>
                            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('app_register') }}">Registrarse</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('app_login') }}">Iniciar Sesión</a>
                                    </li>

                            {% endif %}
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('app_imagen_no_habilitadas') }}">
                                                Imágenes no Habilitadas
                                            </a>
                                        </li>
                                    {% endif %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('app_logout') }}">
                                            Cerrar Sesión
                                        </a>
                                    </li>

                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
            {% block body %}
                {# {{ include('partials/_navbar.html.twig') }}#}

            {% endblock %}

    </body>
</html>
